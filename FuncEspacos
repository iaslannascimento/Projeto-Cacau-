function result = espaco3(im)

#fazendo a modificaÃ§Ã£o com a imagem cinza 
im2 = rgb2gray(im);

for i=1:size(im2,1)
  for j=1:size(im2,2)
    
    if im2(i,j) >15 && im2(i,j)<35
          im2(i,j) = 255;
    else  
          im2(i,j)=0;
    endif
  endfor
endfor
figure(1),imshow(im2);
[l, num] = bwlabel(im2);

num
se = strel("square",5);
im2=imopen(im2,se);

figure(2),imshow(im2);
[l, num] = bwlabel(im2);
x = 1;
if num  <= 55
  x = 0;
endif

result = x ;
